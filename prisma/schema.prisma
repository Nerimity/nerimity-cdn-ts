generator client {
  provider = "prisma-client-js"
}

datasource db {
 provider = "sqlite"
  url      = "file:./dev.db"
}

model WaitingVerification {
  fileId                String @id
  groupId           String

  tempFilename      String
  originalFilename  String
  filesize          Int
  mimetype          String
  animated          Boolean

  compressed       Boolean

  type               String


  createdAt         DateTime @default(now())
}

model ExpireFile {
  fileId String @id
  groupId String

  createdAt         DateTime @default(now())
}